{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "wsVmName": {
            "type": "string"
        },
         "location": {
            "type": "string"
        },
         "adminUsername": {
            "type": "string"
        },
         "adminPassword": {
            "type": "string"
        },
         "orguser": {
            "type": "string"
        },
        "computeApiVersion":{
            "type": "string"
        },
        "workstationSetupUrl2": {
            "type": "string"
        },
        "chef-server-fqdn": {
            "type": "string"
        },
        "PIAFSQLIP":{
            "type": "string"
        },
        "PIDAFQDN":{
            "type": "string"
        },
        "PIBAIP":{
            "type": "string"
        },
        "adIP":{
            "type": "string"
        },
        "bastianIP":{
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('wsVmName'),'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('location')]",
            "apiVersion": "[parameters('computeApiVersion')]",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('workstationSetupUrl2')]"
                    ]
                },
                "protectedSettings": {
                     "commandToExecute": "[concat('powershell.exe -File workstationsetup2.ps1', ' ', parameters('adminUsername'), ' ', parameters('adminPassword'), ' ', parameters('chef-server-fqdn'), ' ', parameters('orguser'),' ',parameters('PIAFSQLIP'),' ',parameters('PIDAFQDN'),' ',parameters('PIBAIP'),' ',parameters('adIP'),' ',parameters('bastianIP'))]"
                }
            }
        }
    ]
}