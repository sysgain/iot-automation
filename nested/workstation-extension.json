{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "bastionServerSettings": {
            "type": "object"
        },
         "apiVersions": {
            "type": "object"
        },
         "MCSModules": {
            "type": "object"
        },
        "PIAFSQLSettings":{
            "type": "object"
        },
        "PIBAServersettings":{
            "type": "object"
        },
        "workstationFQDN":{
            "type": "string"
        },
        "splunkSettings":{
            "type": "object"
        }
    },
    "variables": {  
        "bastionIP": "[concat(parameters('bastionServerSettings').bastionDnsLabelPrefix,'.',parameters('bastionServerSettings').location,'.cloudapp.azure.com')]"
    },
    "resources": [
        {
            "name": "[concat(parameters('bastionServerSettings').wsVmName,'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('bastionServerSettings').location]",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('bastionServerSettings').workstationSetupUrl2]"
                    ]
                },
                "protectedSettings": {
                     "commandToExecute": "[concat('powershell.exe -File workstationsetup2.ps1', ' ', parameters('bastionServerSettings').Username, ' ', parameters('bastionServerSettings').Password, ' ', parameters('MCSModules').chefAutomateIPAddress, ' ', parameters('bastionServerSettings').orguser,' ',parameters('PIAFSQLSettings').sqlPrivateIPAddress,' ',parameters('PIBAServersettings').PIBAPrivateIPAddress,' ',variables('bastionIP'),' ',parameters('workstationFQDN'), ' ', parameters('MCSModules').adNicIPAddress,' ',parameters('splunkSettings').splunkprivateIP, ' ', parameters('MCSModules').trendNicIPAddress)]"
                }
            }
        }
    ]
}