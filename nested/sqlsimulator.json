{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "piafsqlSettings": {
            "type": "object"
        },
        "apiVersions": {
            "type": "object"
        },
        "azureSQL":{
            "type": "object"
        },
        "sqlstorafeaccountkey":{
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('piafsqlSettings').sqlservername,'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('piafsqlSettings').location]",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('piafsqlSettings').fileUris3]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File ', parameters('piafsqlSettings').scriptFileName3,' ',parameters('piafsqlSettings').simulatorUrl,' ',parameters('piafsqlSettings').dataserviceUrl,' ',parameters('piafsqlSettings').piWebApiSimulatorUrl,' ',parameters('piafsqlSettings').adminUsername,' ',parameters('piafsqlSettings').adminPassword,' ',parameters('piafsqlSettings').sqlservername,' ',parameters('azureSQL').serverName,' ',parameters('azureSQL').databaseName,' ',parameters('piafsqlSettings').sqlAuthenticationLogin,' ',parameters('piafsqlSettings').sqlAuthenticationPassword,' ',parameters('piafsqlSettings').sqlStorageAccountName,' ',parameters('sqlstorafeaccountkey'))]"
                }
            }
        }
    ]
}
