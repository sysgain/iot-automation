{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sqlservername": {
            "type": "string"
        },
        "computeApiVersion": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "fileUris3": {
            "type": "string"
        },
        "scriptFileName3": {
            "type": "string"
        },
        "simulatorUrl": {
            "type": "string"
        },
        "dataserviceUrl": {
            "type": "string"
        },
        "piWebApiSimulatorUrl":{
            "type": "string"
        },
        "adminUsername":{
           "type": "string"
        },
        "adminPassword":{
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('sqlservername'),'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('location')]",
            "apiVersion": "[parameters('computeApiVersion')]",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('fileUris3')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File ', parameters('scriptFileName3'),' ',parameters('simulatorUrl'),' ',parameters('dataserviceUrl'),' ',parameters('piWebApiSimulatorUrl'),' ',parameters('adminUsername'),' ',parameters('adminPassword'),' ',parameters('sqlservername'))]"
                }
            }
        }
    ]
}
