{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "piafsqlSettings": {
            "type": "object"
        },
        "pibaServersettings": {
            "type": "object"
        },
        "networkSettings": {
            "type": "object"
        },
        "apiVersions": {
            "type": "object"
        }
    },
    "variables": {
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('networkSettings').virtualNetworkName)]",
        "subnetRef3": "[concat(variables('vnetId'), '/subnets/', parameters('networkSettings').subnet3Name)]",
        "subnetRef4": "[concat(variables('vnetId'), '/subnets/', parameters('networkSettings').subnet4Name)]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('piafsqlSettings').sqlStorageAccountName]",
            "apiVersion": "[parameters('apiVersions').storageApiVersion]",
            "location": "[parameters('piafsqlSettings').location]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage",
            "properties": {}
        },
        {
            "name": "[parameters('piafsqlSettings').networkSecurityGroupName]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "[parameters('apiVersions').networkApiVersion]",
            "location": "[parameters('piafsqlSettings').location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "priority": 1000,
                            "sourceAddressPrefix": "*",
                            "protocol": "TCP",
                            "destinationPortRange": "3389",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "default-allow-sql",
                        "properties": {
                            "priority": 1001,
                            "sourceAddressPrefix": "*",
                            "protocol": "TCP",
                            "destinationPortRange": "1433",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "https",
                        "properties": {
                            "priority": 1002,
                            "sourceAddressPrefix": "*",
                            "protocol": "TCP",
                            "destinationPortRange": "443",
                            "access": "Allow",
                            "direction": "Outbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "PIData",
                        "properties": {
                            "priority": 1600,
                            "sourceAddressPrefix": "*",
                            "protocol": "*",
                            "destinationPortRange": "5450",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "SQLAnalysis2383",
                        "properties": {
                            "priority": 2000,
                            "sourceAddressPrefix": "*",
                            "protocol": "*",
                            "destinationPortRange": "2383",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "SQLAnalysis2382",
                        "properties": {
                            "priority": 2100,
                            "sourceAddressPrefix": "*",
                            "protocol": "*",
                            "destinationPortRange": "2382",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "HTTP",
                        "properties": {
                            "priority": 100,
                            "sourceAddressPrefix": "*",
                            "protocol": "TCP",
                            "destinationPortRange": "80",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "PIUFLConnector",
                        "properties": {
                            "priority": 2200,
                            "sourceAddressPrefix": "*",
                            "protocol": "*",
                            "destinationPortRange": "5460",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "PIServer",
                        "properties": {
                            "priority": 2201,
                            "sourceAddressPrefix": "*",
                            "protocol": "*",
                            "destinationPortRange": "5457",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "winrm",
                        "properties": {
                            "priority": 2202,
                            "sourceAddressPrefix": "*",
                            "protocol": "*",
                            "destinationPortRange": "5985",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('piafsqlSettings').networkInterfaceName]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "[parameters('apiVersions').networkApiVersion]",
            "location": "[parameters('piafsqlSettings').location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('piafsqlSettings').networkSecurityGroupName)]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef3')]"
                            },
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('piafsqlSettings').sqlPrivateIPAddress]"
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('piafsqlSettings').networkSecurityGroupName)]"
                }
            }
        },
        {
            "name": "[parameters('piafsqlSettings').sqlservername]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "location": "[parameters('piafsqlSettings').location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('piafsqlSettings').networkInterfaceName)]",
                "[concat('Microsoft.Storage/storageAccounts/', parameters('piafsqlSettings').sqlStorageAccountName)]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('piafsqlSettings').sqlservername]",
                    "adminUsername": "[parameters('piafsqlSettings').adminUsername]",
                    "adminPassword": "[parameters('piafsqlSettings').adminPassword]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('piafsqlSettings').vmSize]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('piafsqlSettings').publisher]",
                        "offer": "[parameters('piafsqlSettings').offer]",
                        "sku": "[parameters('piafsqlSettings').sku]",
                        "version": "[parameters('piafsqlSettings').version]"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('piafsqlSettings').storageAccountType]"
                        }
                    },
                    "dataDisks": [
                        {
                            "diskSizeGB": "1023",
                            "lun": 0,
                            "createOption": "Empty"
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('piafsqlSettings').networkInterfaceName)]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": "true",
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', parameters('piafsqlSettings').sqlStorageAccountName)).primaryEndpoints.blob]"
                    }
                }
            }
        },
        {
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('piafsqlSettings').sqlservername, '/SqlIaasExtension')]",
            "location": "[parameters('piafsqlSettings').location]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('piafsqlSettings').sqlservername)]"
            ],
            "properties": {
                "type": "SqlIaaSAgent",
                "publisher": "Microsoft.SqlServer.Management",
                "typeHandlerVersion": "1.2",
                "autoUpgradeMinorVersion": "true",
                "settings": {
                    "AutoTelemetrySettings": {
                        "Region": "[parameters('piafsqlSettings').location]"
                    },
                    "AutoPatchingSettings": {
                        "PatchCategory": "WindowsMandatoryUpdates",
                        "Enable": true,
                        "DayOfWeek": "[parameters('piafsqlSettings').sqlAutopatchingDayOfWeek]",
                        "MaintenanceWindowStartingHour": "[parameters('piafsqlSettings').sqlAutopatchingStartHour]",
                        "MaintenanceWindowDuration": "[parameters('piafsqlSettings').sqlAutopatchingWindowDuration]"
                    },
                    "KeyVaultCredentialSettings": {
                        "Enable": false,
                        "CredentialName": ""
                    },
                    "ServerConfigurationsManagementSettings": {
                        "SQLConnectivityUpdateSettings": {
                            "ConnectivityType": "[parameters('piafsqlSettings').sqlConnectivityType]",
                            "Port": "1433"
                        },
                        "SQLWorkloadTypeUpdateSettings": {
                            "SQLWorkloadType": "[parameters('piafsqlSettings').sqlStorageWorkloadType]"
                        },
                        "SQLStorageUpdateSettings": {
                            "DiskCount": "[parameters('piafsqlSettings').sqlStorageDisksCount]",
                            "NumberOfColumns": "[parameters('piafsqlSettings').sqlStorageDisksCount]",
                            "StartingDeviceID": "2",
                            "DiskConfigurationType": "New"
                        },
                        "AdditionalFeaturesServerConfigurations": {
                            "IsRServicesEnabled": "false"
                        }
                    }
                },
                "protectedSettings": {
                    "SQLAuthUpdateUserName": "[parameters('piafsqlSettings').sqlAuthenticationLogin]",
                    "SQLAuthUpdatePassword": "[parameters('piafsqlSettings').sqlAuthenticationPassword]"
                }
            }
        },
        {
            "name": "[concat(parameters('piafsqlSettings').sqlservername,'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('piafsqlSettings').location]",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',parameters('piafsqlSettings').sqlservername,'/extensions/SqlIaasExtension')]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                       "[parameters('piafsqlSettings').fileUris]"
                    ]
                },
                "protectedSettings": {
                   "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File ', parameters('piafsqlSettings').scriptFileName,' ',parameters('piafsqlSettings').domainName,' ',parameters('piafsqlSettings').Username,' ',parameters('piafsqlSettings').Password)]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "sqlSimulatorSetup",
            "apiVersion": "[parameters('apiVersions').deploymentApiVersion]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',parameters('piafsqlSettings').sqlservername,'/extensions/CustomScriptExtension')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('piafsqlSettings').baseUrl, 'nested/sqlsimulator.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "piafsqlSettings": {
                        "value": "[parameters('piafsqlSettings')]"
                    },
                    "apiVersions": {
                        "value": "[parameters('apiVersions')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('piafsqlSettings').sqlservername,'/InstallationDSA3')]",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "location": "[parameters('piafsqlSettings').location]",
            "scale": null,
            "properties": {
                "publisher": "TrendMicro.DeepSecurity",
                "type": "TrendMicroDSA",
                "typeHandlerVersion": "10.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "DSMname": "[parameters('piafsqlSettings').ManagerAddress]",
                    "DSMport": "[parameters('piafsqlSettings').ActivationPort]",
                    "policyNameorID": ""
                },
                "protectedSettings": {
                    "tenantID": "[parameters('piafsqlSettings').TenantIdentifier]",
                    "tenantPassword": "[parameters('piafsqlSettings').TenantActivationPassword]"
                }
            },
            "dependsOn": [
                "sqlSimulatorSetup"
            ]
        },
        {
            "name": "[parameters('pibaServersettings').pibaDiagStgAcnt]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "[parameters('apiVersions').storageApiVersion]",
            "location": "[parameters('pibaServersettings').location]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage",
            "properties": {}
        },
        {
            "name": "[parameters('pibaServersettings').pibaNetworkSecurityGroupName]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "[parameters('apiVersions').networkApiVersion]",
            "location": "[parameters('pibaServersettings').location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "priority": 1000,
                            "sourceAddressPrefix": "*",
                            "protocol": "TCP",
                            "destinationPortRange": "3389",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "winrm",
                        "properties": {
                            "priority": 1010,
                            "sourceAddressPrefix": "*",
                            "protocol": "TCP",
                            "destinationPortRange": "5985",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('pibaServersettings').pibaNic]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "[parameters('apiVersions').networkApiVersion]",
            "location": "[parameters('pibaServersettings').location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('pibaServersettings').pibaNetworkSecurityGroupName)]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef4')]"
                            },
                            "privateIPAllocationMethod": "Static",
                            "privateIPAddress": "[parameters('pibaServersettings').pibaPrivateIPAddress]"
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('pibaServersettings').PIBANetworkSecurityGroupName)]"
                }
            }
        },
        {
            "name": "[parameters('pibaServersettings').pibaVMName]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "location": "[parameters('pibaServersettings').location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('pibaServersettings').pibaNic)]",
                "[concat('Microsoft.Storage/storageAccounts/', parameters('pibaServersettings').pibaDiagStgAcnt)]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('pibaServersettings').pibaVMName]",
                    "adminUsername": "[parameters('pibaServersettings').adminUsername]",
                    "adminPassword": "[parameters('pibaServersettings').adminPassword]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('pibaServersettings').pibaVMSize]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('pibaServersettings').publisher]",
                        "offer": "[parameters('pibaServersettings').offer]",
                        "sku": "[parameters('pibaServersettings').sku]",
                        "version": "[parameters('pibaServersettings').version]"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('pibaServersettings').storageAccountType]"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('pibaServersettings').pibaNic)]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts', parameters('pibaServersettings').pibaDiagStgAcnt)).primaryEndpoints['blob']]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('pibaServersettings').pibaVMName,'/CustomScriptExtension2')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('pibaServersettings').location]",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',parameters('pibaServersettings').pibaVMName)]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                          "[parameters('pibaServersettings').fileUris]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File ', parameters('pibaServersettings').scriptFileName,' ',parameters('pibaServersettings').domainName,' ',parameters('pibaServersettings').Username,' ',parameters('pibaServersettings').Password)]"
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('pibaServersettings').pibaVMName,'/InstallationDSA5')]",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "location": "[parameters('pibaServersettings').location]",
            "scale": null,
            "properties": {
                "publisher": "TrendMicro.DeepSecurity",
                "type": "TrendMicroDSA",
                "typeHandlerVersion": "10.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "DSMname": "[parameters('pibaServersettings').ManagerAddress]",
                    "DSMport": "[parameters('pibaServersettings').ActivationPort]",
                    "policyNameorID": ""
                },
                "protectedSettings": {
                    "tenantID": "[parameters('pibaServersettings').TenantIdentifier]",
                    "tenantPassword": "[parameters('pibaServersettings').TenantActivationPassword]"
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',parameters('pibaServersettings').pibaVMName,'/extensions/CustomScriptExtension2')]"
            ]
        }
    ],
    "outputs": {
    }
}