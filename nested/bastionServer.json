{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "bastionServerSettings": {
            "type": "object"
        },
        "networkSettings": {
            "type": "object"
        },
        "apiVersions": {
            "type": "object"
        },
        "MCSModules": {
            "type": "object"
        },
        "PIAFSQLSettings": {
            "type": "object"
        },
        "PIDAServersettings": {
            "type": "object"
        },
        "PIBAServersettings": {
            "type": "object"
        }
    },
    "variables": {
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('networkSettings').virtualNetworkName)]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('networkSettings').subnet1Name)]"
    },
    "resources": [
        {
            "name": "[parameters('bastionServerSettings').bastionDiagStgAcnt]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "[parameters('apiVersions').storageApiVersion]",
            "location": "[parameters('bastionServerSettings').location]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage",
            "properties": {}
        },
        {
            "name": "[parameters('bastionServerSettings').bastionNic]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "[parameters('apiVersions').networkApiVersion]",
            "location": "[parameters('bastionServerSettings').location]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIpAddresses/', parameters('bastionServerSettings').publicIpAddressName)]",
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('bastionServerSettings').networkSecurityGroupName)]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', parameters('bastionServerSettings').publicIpAddressName)]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('bastionServerSettings').networkSecurityGroupName)]"
                }
            }
        },
        {
            "name": "[parameters('bastionServerSettings').publicIpAddressName]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "[parameters('apiVersions').networkApiVersion]",
            "location": "[parameters('bastionServerSettings').location]",
            "properties": {
                "publicIpAllocationMethod": "[parameters('bastionServerSettings').publicIpAddressType]",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('bastionServerSettings').bastionDnsLabelPrefix]"
                }
            }
        },
        {
            "name": "[parameters('bastionServerSettings').networkSecurityGroupName]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "[parameters('apiVersions').networkApiVersion]",
            "location": "[parameters('bastionServerSettings').location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "priority": 1000,
                            "sourceAddressPrefix": "*",
                            "protocol": "TCP",
                            "destinationPortRange": "3389",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('bastionServerSettings').bastionVMName]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "location": "[parameters('bastionServerSettings').location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('bastionServerSettings').bastionNic)]",
                "[concat('Microsoft.Storage/storageAccounts/', parameters('bastionServerSettings').bastionDiagStgAcnt)]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('bastionServerSettings').bastionVMName]",
                    "adminUsername": "[parameters('bastionServerSettings').adminUsername]",
                    "adminPassword": "[parameters('bastionServerSettings').adminPassword]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('bastionServerSettings').bastionVMSize]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('bastionServerSettings').publisher]",
                        "offer": "[parameters('bastionServerSettings').offer]",
                        "sku": "[parameters('bastionServerSettings').sku]",
                        "version": "[parameters('bastionServerSettings').version]"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('bastionServerSettings').storageAccountType]"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('bastionServerSettings').bastionNic)]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts', parameters('bastionServerSettings').bastionDiagStgAcnt)).primaryEndpoints['blob']]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('bastionServerSettings').bastionVMName,'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('bastionServerSettings').location]",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/',parameters('bastionServerSettings').bastionVMName)]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('bastionServerSettings').fileUris]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File psscript.ps1',' ',parameters('bastionServerSettings').domainName,' ',parameters('bastionServerSettings').Username,' ',parameters('bastionServerSettings').Password)]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "PowerBIInstall",
            "apiVersion": "[parameters('apiVersions').deploymentApiVersion]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('bastionServerSettings').bastionVMName,'/extensions/CustomScriptExtension')]"
            ],
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[parameters('bastionServerSettings').powerBIUrl]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "powerBITemplatesUrl": {
                        "value": "[parameters('bastionServerSettings').powerBITemplatesUrl]"
                    },
                    "powerBIDesktopUrl": {
                        "value": "[parameters('bastionServerSettings').powerBIDesktopUrl]"
                    },
                    "powerBIScriptUrl": {
                        "value": "[parameters('bastionServerSettings').powerBIScriptUrl]"
                    },
                    "bastionVMName": {
                        "value": "[parameters('bastionServerSettings').bastionVMName]"
                    },
                    "computeApiVersion": {
                        "value": "[parameters('apiVersions').computeApiVersion]"
                    }
                }
            }
        },
        {
            "apiVersion": "[parameters('apiVersions').networkApiVersion]",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[parameters('bastionServerSettings').wsPublicIpName]",
            "location": "[parameters('bastionServerSettings').location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('bastionServerSettings').wsClientDns]"
                }
            }
        },
        {
            "name": "[parameters('bastionServerSettings').wsNsg]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "[parameters('apiVersions').networkApiVersion]",
            "location": "[parameters('bastionServerSettings').location]",
            "dependsOn": [],
            "properties": {
                "securityRules": [
                    {
                        "name": "https",
                        "properties": {
                            "priority": 100,
                            "sourceAddressPrefix": "*",
                            "protocol": "*",
                            "destinationPortRange": "443",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "http",
                        "properties": {
                            "priority": 101,
                            "sourceAddressPrefix": "*",
                            "protocol": "*",
                            "destinationPortRange": "80",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "winrm",
                        "properties": {
                            "priority": 102,
                            "sourceAddressPrefix": "*",
                            "protocol": "*",
                            "destinationPortRange": "5985",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "httpsout",
                        "properties": {
                            "priority": 1070,
                            "sourceAddressPrefix": "*",
                            "protocol": "TCP",
                            "destinationPortRange": "443",
                            "access": "Allow",
                            "direction": "Outbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    },
                    {
                        "name": "default-allow-rdp",
                        "properties": {
                            "priority": 1000,
                            "sourceAddressPrefix": "*",
                            "protocol": "TCP",
                            "destinationPortRange": "3389",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('bastionServerSettings').wsNic]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "[parameters('apiVersions').networkApiVersion]",
            "location": "[parameters('bastionServerSettings').location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/',parameters('bastionServerSettings').wsNsg)]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('bastionServerSettings').chefPublicIPAddressName)]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('bastionServerSettings').wsNsg)]"
                }
            }
        },
        {
            "name": "[parameters('bastionServerSettings').wsVmName]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "location": "[parameters('bastionServerSettings').location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('bastionServerSettings').wsNic)]",
                "[concat('Microsoft.Storage/storageAccounts/', parameters('bastionServerSettings').bastionDiagStgAcnt)]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('bastionServerSettings').wsVmName]",
                    "adminUsername": "[parameters('bastionServerSettings').Username]",
                    "adminPassword": "[parameters('bastionServerSettings').Password]",
                    "windowsConfiguration": {
                        "provisionVmAgent": true
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('bastionServerSettings').VMSize]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2012-R2-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('bastionServerSettings').storageAccountType]"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('bastionServerSettings').wsNic)]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": "true",
                        "storageUri": "[reference(resourceId('Microsoft.Storage/storageAccounts/', parameters('bastionServerSettings').bastionDiagStgAcnt)).primaryEndpoints.blob]"
                    }
                }
            }
        },
        {
            "name": "[concat(parameters('bastionServerSettings').wsVmName,'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[parameters('bastionServerSettings').location]",
            "apiVersion": "[parameters('apiVersions').computeApiVersion]",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('bastionServerSettings').wsVmName)]"
            ],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('bastionServerSettings').workstationSetup]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('powershell.exe -File workstationsetup1.ps1')]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "workstation-extension",
            "apiVersion": "[parameters('apiVersions').deploymentApiVersion]",
            "dependsOn": [
                "PowerBIInstall",
                "[concat('Microsoft.Compute/virtualMachines/', parameters('bastionServerSettings').wsVmName,'/extensions/CustomScriptExtension')]"
            ],
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[parameters('bastionServerSettings').workstationextensionurl]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "wsVmName": {
                        "value": "[parameters('bastionServerSettings').wsVmName]"
                    },
                    "location": {
                        "value": "[parameters('bastionServerSettings').location]"
                    },
                    "adminUsername": {
                        "value": "[parameters('bastionServerSettings').Username]"
                    },
                    "adminPassword": {
                        "value": "[parameters('bastionServerSettings').Password]"
                    },
                    "computeApiVersion": {
                        "value": "[parameters('apiVersions').computeApiVersion]"
                    },
                    "orguser": {
                        "value": "[parameters('bastionServerSettings').orguser]"
                    },
                    "workstationSetupUrl2": {
                        "value": "[parameters('bastionServerSettings').workstationSetupUrl2]"
                    },
                    "chef-server-fqdn": {
                        "value": "[parameters('bastionServerSettings').chefAutomateIPAddress]"
                    },
                   "PIAFSQLIP": {
                        "value": "[parameters('PIAFSQLSettings').sqlPrivateIPAddress]"
                    },
                    "PIDAIP": {
                        "value": "[parameters('PIDAServersettings').PIDAPrivateIPAddress]"
                    },
                    "PIBAIP": {
                        "value": "[parameters('PIBAServersettings').PIBAPrivateIPAddress]"
                    },
                    "adIP": {
                        "value": "[parameters('MCSModules').adNicIPAddress]"
                    },
                     "bastianIP": {
                        "value": "[reference(parameters('bastionServerSettings').publicIpAddressName).dnsSettings.fqdn]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "name": "domainJoin",
            "apiVersion": "[parameters('apiVersions').deploymentApiVersion]",
            "dependsOn": [
                "workstation-extension"
            ],
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[parameters('bastionServerSettings').domainJoinUrl]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "VmName": {
                        "value": "[parameters('bastionServerSettings').wsVmName]"
                    },
                    "scriptFileName": {
                        "value": "[parameters('bastionServerSettings').scriptFileName]"
                    },
                    "domainName": {
                        "value": "[parameters('bastionServerSettings').domainName]"
                    },
                    "Username": {
                        "value": "[parameters('bastionServerSettings').Username]"
                    },
                    "Password": {
                        "value": "[parameters('bastionServerSettings').Password]"
                    },
                    "fileUris": {
                        "value": "[parameters('bastionServerSettings').fileUris]"
                    },
                    "computeApiVersion": {
                        "value": "[parameters('apiVersions').computeApiVersion]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('bastionServerSettings').adminUsername]"
        },
        "adminPassword": {
            "type": "string",
            "value": "[parameters('bastionServerSettings').adminPassword]"
        },
        "bastionFQDN": {
            "type": "string",
            "value": "[reference(parameters('bastionServerSettings').publicIpAddressName).dnsSettings.fqdn]"
        },
         "workstationFQDN": {
            "type": "string",
            "value": "[reference(parameters('bastionServerSettings').wsPublicIpName).dnsSettings.fqdn]"
        }
    }
}