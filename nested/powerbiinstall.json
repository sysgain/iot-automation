{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "powerBITemplatesUrl": {
            "type": "string"
        },
        "powerBIDesktopUrl": {
            "type": "string"
        },
        "powerBIScriptUrl":{
            "type": "string"
        },
        "bastionVMName":{
            "type": "string"
        },
        "computeApiVersion":{
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('bastionVMName'),'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[resourceGroup().location]",
            "apiVersion": "[parameters('computeApiVersion')]",
            "dependsOn": [],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('powerBIScriptUrl')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File psscript.ps1',' ',parameters('powerBITemplatesUrl'),' ',parameters('powerBIDesktopUrl'))]"
                }
            }
        }
    ]
}