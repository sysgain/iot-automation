{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VmName": {
            "type": "string"
        },
        "scriptFileName": {
            "type": "string"
        },
        "domainName": {
            "type": "string"
        },
        "Username": {
            "type": "string"
        },
        "Password": {
            "type": "string"
        },
        "fileUris": {
            "type": "string"
        },
        "computeApiVersion": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[concat(parameters('VmName'),'/CustomScriptExtension')]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "location": "[resourceGroup().location]",
            "apiVersion": "[parameters('computeApiVersion')]",
            "dependsOn": [],
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": [
                        "[parameters('fileUris')]"
                    ]
                },
                "protectedSettings": {
                    "commandToExecute": "[concat ('powershell -ExecutionPolicy Unrestricted -File psscript.ps1',' ',parameters('domainName'),' ',parameters('Username'),' ',parameters('Password'))]"
                }
            }
        }
    ]
}